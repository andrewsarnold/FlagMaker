<Window x:Class="FlagMaker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:FlagMaker" MinHeight="120" Width="600"
        SizeChanged="MainWindowOnSizeChanged" Closing="MainWindow_OnClosing"
        xmlns:Localization="clr-namespace:FlagMaker.Localization">

    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Offset="0" Color="#f0f0f0" />
            <GradientStop Offset="1" Color="#b0b0b0" />
        </LinearGradientBrush>
    </Window.Background>

    <Window.Resources>
        <ResourceDictionary Source="Style.xaml" />
    </Window.Resources>

    <Window.InputBindings>
        <KeyBinding Command="{x:Static local:MainWindow.NewCommand}" Gesture="Ctrl+N" />
        <KeyBinding Command="{x:Static local:MainWindow.SaveCommand}" Gesture="Ctrl+S" />
        <KeyBinding Command="{x:Static local:MainWindow.SaveAsCommand}" Gesture="Ctrl+Shift+S" />
        <KeyBinding Command="{x:Static local:MainWindow.OpenCommand}" Gesture="Ctrl+O" />
    </Window.InputBindings>

    <Window.CommandBindings>
        <CommandBinding Command="{x:Static local:MainWindow.NewCommand}" Executed="MenuNewClick"/>
        <CommandBinding Command="{x:Static local:MainWindow.SaveCommand}" Executed="MenuSaveClick"/>
        <CommandBinding Command="{x:Static local:MainWindow.SaveAsCommand}" Executed="MenuSaveAsClick"/>
        <CommandBinding Command="{x:Static local:MainWindow.OpenCommand}" Executed="MenuOpenClick"/>
    </Window.CommandBindings>

    <DockPanel LastChildFill="True">
        <Menu IsMainMenu="True" DockPanel.Dock="Top">
            <MenuItem Header="{x:Static Localization:strings.File}">
                <MenuItem Header="{x:Static Localization:strings.New}" Click="MenuNewClick" InputGestureText="Ctrl+N" />
                <MenuItem Header="{x:Static Localization:strings.Open}" Click="MenuOpenClick" InputGestureText="Ctrl+O" />
                <MenuItem Header="{x:Static Localization:strings.Save}" Click="MenuSaveClick" InputGestureText="Ctrl+S" />
                <MenuItem Header="{x:Static Localization:strings.SaveAs}" Click="MenuSaveAsClick" InputGestureText="Ctrl+Shift+S" />
                <Separator />
                <MenuItem Header="{x:Static Localization:strings.ExportAsPng}" Click="MenuExportPngClick" />
                <MenuItem Header="{x:Static Localization:strings.ExportAsSvg}" Click="MenuExportSvgClick" />
            </MenuItem>
            <MenuItem Header="{x:Static Localization:strings.WorldFlagPresets}" x:Name="mnuWorldFlagPresets" />
            <MenuItem Header="{x:Static Localization:strings.Language}" x:Name="mnuLanguage" />
        </Menu>

        <WrapPanel DockPanel.Dock="Top" Orientation="Horizontal">
            <Label Content="{x:Static Localization:strings.Ratio}" VerticalAlignment="Center" />
            <TextBox x:Name="txtRatioHeight" Width="30" TextChanged="RatioTextboxChanged" VerticalAlignment="Center" />
            <Label Content=":" VerticalAlignment="Center" />
            <TextBox x:Name="txtRatioWidth" Width="30" TextChanged="RatioTextboxChanged" VerticalAlignment="Center" />

            <Label Content="{x:Static Localization:strings.GridSize}" Margin="10,0,0,0" VerticalAlignment="Center" />
            <ComboBox x:Name="cmbGridSize" SelectionChanged="GridSizeDropdownChanged" Width="60" VerticalAlignment="Center" />

            <Button x:Name="btnGrid" Margin="10,0,0,0" ToolTip="{x:Static Localization:strings.ShowGrid}" Click="GridOnChanged" VerticalAlignment="Center">
                <Canvas Width="30" Height="20">
                    <Line X1="0" X2="30" Y1="5" Y2="5" StrokeThickness="2" Stroke="Gray" />
                    <Line X1="0" X2="30" Y1="10" Y2="10" StrokeThickness="2" Stroke="Gray" />
                    <Line X1="0" X2="30" Y1="15" Y2="15" StrokeThickness="2" Stroke="Gray" />

                    <Line X1="5" X2="5" Y1="0" Y2="20" StrokeThickness="2" Stroke="Gray" />
                    <Line X1="10" X2="10" Y1="0" Y2="20" StrokeThickness="2" Stroke="Gray" />
                    <Line X1="15" X2="15" Y1="0" Y2="20" StrokeThickness="2" Stroke="Gray" />
                    <Line X1="20" X2="20" Y1="0" Y2="20" StrokeThickness="2" Stroke="Gray" />
                    <Line X1="25" X2="25" Y1="0" Y2="20" StrokeThickness="2" Stroke="Gray" />
                </Canvas>
            </Button>
            
            <TextBox x:Name="txtName" Margin="10,0,0,0" Width="200" FontSize="18"
                     VerticalContentAlignment="Center" Background="Transparent" VerticalAlignment="Center" />

            <Button Style="{DynamicResource ResourceKey=GraphicButton}" ToolTip="{x:Static Localization:strings.ShuffleColors}" Click="ShuffleColors" Height="32" Width="32">
                <Image Source="Images\rotate.png" />
            </Button>
        </WrapPanel>
        
        <Separator DockPanel.Dock="Top" />

        <Grid DockPanel.Dock="Bottom" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Viewbox Grid.Column="0" Margin="10" SnapsToDevicePixels="True" x:Name="viewbox">
                <Grid>
                    <Canvas x:Name="canvas" Background="Transparent" HorizontalAlignment="Stretch" SnapsToDevicePixels="True" />
                    <Canvas x:Name="canvasGrid" Background="Transparent" HorizontalAlignment="Stretch" SnapsToDevicePixels="True" />
                </Grid>
            </Viewbox>

            <GridSplitter Grid.Column="1" Width="5" ResizeBehavior="PreviousAndNext" />

            <Grid Grid.Column="2" HorizontalAlignment="Stretch" MinWidth="168">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Vertical" Margin="5,0,5,0">
                    <Label Content="{x:Static Localization:strings.Division}" FontSize="16" FontWeight="Bold" />

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                        <WrapPanel Width="110" HorizontalAlignment="Left" Margin="0,0,0,4">
                            <Button Click="DivisionGridClick" ToolTip="{x:Static Localization:strings.DivisionGrid}">
                                <StackPanel Orientation="Vertical">
                                    <StackPanel Orientation="Horizontal">
                                        <Rectangle Width="6" Height="5" Fill="Red" />
                                        <Rectangle Width="6" Height="5" Fill="Blue" />
                                        <Rectangle Width="6" Height="5" Fill="Red" />
                                        <Rectangle Width="6" Height="5" Fill="Blue" />
                                        <Rectangle Width="6" Height="5" Fill="Red" />
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <Rectangle Width="6" Height="5" Fill="Blue" />
                                        <Rectangle Width="6" Height="5" Fill="Red" />
                                        <Rectangle Width="6" Height="5" Fill="Blue" />
                                        <Rectangle Width="6" Height="5" Fill="Red" />
                                        <Rectangle Width="6" Height="5" Fill="Blue" />
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <Rectangle Width="6" Height="5" Fill="Red" />
                                        <Rectangle Width="6" Height="5" Fill="Blue" />
                                        <Rectangle Width="6" Height="5" Fill="Red" />
                                        <Rectangle Width="6" Height="5" Fill="Blue" />
                                        <Rectangle Width="6" Height="5" Fill="Red" />
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <Rectangle Width="6" Height="5" Fill="Blue" />
                                        <Rectangle Width="6" Height="5" Fill="Red" />
                                        <Rectangle Width="6" Height="5" Fill="Blue" />
                                        <Rectangle Width="6" Height="5" Fill="Red" />
                                        <Rectangle Width="6" Height="5" Fill="Blue" />
                                    </StackPanel>
                                </StackPanel>
                            </Button>

                            <Button Click="DivisionFessesClick" ToolTip="{x:Static Localization:strings.DivisionFesses}">
                                <StackPanel Orientation="Vertical">
                                    <Rectangle Width="30" Height="7" Fill="Red" />
                                    <Rectangle Width="30" Height="6" Fill="White" />
                                    <Rectangle Width="30" Height="7" Fill="Blue" />
                                </StackPanel>
                            </Button>

                            <Button Click="DivisionPalesClick" ToolTip="{x:Static Localization:strings.DivisionPales}">
                                <StackPanel Orientation="Horizontal">
                                    <Rectangle Width="10" Height="20" Fill="Red" />
                                    <Rectangle Width="10" Height="20" Fill="White" />
                                    <Rectangle Width="10" Height="20" Fill="Blue" />
                                </StackPanel>
                            </Button>

                            <Button Click="DivisionBendsForwardClick" ToolTip="{x:Static Localization:strings.DivisionBendsForward}">
                                <Canvas Width="30" Height="20">
                                    <Path Fill="Red" Data="M 0,0 30,0 0,20 0,0" />
                                    <Path Fill="Blue" Data="M 30,0 30,20 0,20 30,0" />
                                </Canvas>
                            </Button>

                            <Button Click="DivisionBendsBackwardClick" ToolTip="{x:Static Localization:strings.DivisionBendsBackward}">
                                <Canvas Width="30" Height="20">
                                    <Path Fill="Red" Data="M 0,0 30,0 30,20 0,0" />
                                    <Path Fill="Blue" Data="M 30,20 0,20 0,0 30,20" />
                                </Canvas>
                            </Button>

                            <Button Click="DivisionXClick" ToolTip="{x:Static Localization:strings.DivisionBendsBoth}">
                                <Canvas Width="30" Height="20">
                                    <Path Fill="Red" Data="M 0,0 30,0 15,10 0,0" />
                                    <Path Fill="Red" Data="M 0,20 30,20 15,10 0,20" />
                                    <Path Fill="Blue" Data="M 0,0 15,10 0,20 0,0" />
                                    <Path Fill="Blue" Data="M 30,0 15,10 30,20 30,0" />
                                </Canvas>
                            </Button>
                        </WrapPanel>

                        <StackPanel Orientation="Vertical" Margin="10,0,0,0">
                            <Label Content="{x:Static Localization:strings.DivisionPresets}" />
                            <ComboBox x:Name="cmbPresets" VerticalAlignment="Center" SelectionChanged="PresetChanged">
                                <ComboBoxItem Content="{x:Static Localization:strings.DivisionBlank}" Selected="PresetBlank" />
                                <ComboBoxItem Content="{x:Static Localization:strings.DivisionHorizontalHalves}" Selected="PresetHorizontal" />
                                <ComboBoxItem Content="{x:Static Localization:strings.DivisionVerticalHalves}" Selected="PresetVertical" />
                                <ComboBoxItem Content="{x:Static Localization:strings.DivisionQuartered}" Selected="PresetQuad" />
                                <ComboBoxItem Content="{x:Static Localization:strings.DivisionStripes}" Selected="PresetStripes" />
                            </ComboBox>
                        </StackPanel>
                    </StackPanel>

                    <xctk:ColorPicker x:Name="divisionPicker1" />
                    <xctk:ColorPicker x:Name="divisionPicker2" />
                    <xctk:ColorPicker x:Name="divisionPicker3" />

                    <DockPanel LastChildFill="True" Margin="0,4,0,0">
                        <TextBlock Text="0" Margin="0,0,5,0" Width="15" x:Name="divisionSliderLabel1" />
                        <Slider Minimum="1" Maximum="16" x:Name="divisionSlider1" TickFrequency="1" TickPlacement="BottomRight" IsSnapToTickEnabled="True" />
                    </DockPanel>
                    <DockPanel LastChildFill="True">
                        <TextBlock Text="0" Margin="0,0,5,0" Width="15" x:Name="divisionSliderLabel2" />
                        <Slider Minimum="1" Maximum="16" x:Name="divisionSlider2" TickFrequency="1" TickPlacement="BottomRight" IsSnapToTickEnabled="True" />
                    </DockPanel>
                    <DockPanel LastChildFill="True">
                        <TextBlock Text="0" Margin="0,0,5,0" Width="15" x:Name="divisionSliderLabel3" />
                        <Slider Minimum="1" Maximum="16" x:Name="divisionSlider3" TickFrequency="1" TickPlacement="BottomRight" IsSnapToTickEnabled="True" />
                    </DockPanel>
                </StackPanel>

                <GridSplitter Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Top" ShowsPreview="False" ResizeDirection="Rows" Height="5" />

                <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10,0,0">
                    <Label Content="{x:Static Localization:strings.Overlays}" FontSize="16" FontWeight="Bold" />
                    <Button Style="{DynamicResource ResourceKey=GraphicButton}" ToolTip="{x:Static Localization:strings.OverlayAdd}" Click="OverlayAdd">
                        <Image Source="Images\add.png" />
                    </Button>
                </StackPanel>

                <ScrollViewer Grid.Row="3">
                    <StackPanel Orientation="Vertical" x:Name="lstOverlays" Margin="5,0,5,0" />
                </ScrollViewer>
            </Grid>
        </Grid>
    </DockPanel>
</Window>
