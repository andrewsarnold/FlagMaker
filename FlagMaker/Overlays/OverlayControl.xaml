<UserControl x:Class="FlagMaker.Overlays.OverlayControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:D="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:Xctk="http://schemas.xceed.com/wpf/xaml/toolkit" Mc:Ignorable="D" 
             D:DesignHeight="300" D:DesignWidth="300">
    <UserControl.Resources>
        <ResourceDictionary Source="..\Style.xaml" />
    </UserControl.Resources>

    <StackPanel Orientation="Vertical">
		<StackPanel Orientation="Horizontal">
			<Button x:Name="_btnOverlays" Click="OverlaySelect" VerticalContentAlignment="Center" MinWidth="30" />
            <Button ToolTip="Remove" Click="Remove" Margin="15,0,0,0" Style="{DynamicResource ResourceKey=GraphicButton}">
                <Image Source="..\Images\remove.png" />
            </Button>
            <Button ToolTip="Move up" Click="MoveUp" Style="{DynamicResource ResourceKey=GraphicButton}">
                <Image Source="..\Images\moveup.png" />
            </Button>
            <Button ToolTip="Move down" Click="MoveDown" Style="{DynamicResource ResourceKey=GraphicButton}">
                <Image Source="..\Images\movedown.png" />
            </Button>
            <Button ToolTip="Clone" Click="Clone" Style="{DynamicResource ResourceKey=GraphicButton}">
                <Image Source="..\Images\clone.png" />
            </Button>
        </StackPanel>

        <Xctk:ColorPicker x:Name="_overlayPicker" Margin="0,4,0,0" />

        <StackPanel x:Name="_pnlSliders" />
    </StackPanel>
</UserControl>
